<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_user_first_reading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_add_first_reading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp">
        <TableRow
            android:id="@+id/add_first_reading_lmp_date_section"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="@string/add_user_first_reading_lmp_date_label"/>
            <Button
                android:id="@+id/add_first_reading_lmp_on_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="@string/add_user_first_reading_lmp_default_value" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/add_first_reading_weight_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"
                android:text="@string/add_user_first_reading_weight_label"/>

            <EditText
                android:id="@+id/add_first_reading_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="numberDecimal"/>

            <RadioGroup
                android:id="@+id/add_first_reading_weight_unit_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_weight="0.5">
                <RadioButton
                    android:id="@+id/add_first_reading_weight_unit_kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/add_user_first_reading_weight_unit_kg" />
                <RadioButton
                    android:id="@+id/add_first_reading_weight_unit_lb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/add_user_first_reading_weight_unit_lbs" />
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/add_first_reading_height_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="bold"
                android:text="@string/add_user_first_reading_height_label"/>
            <EditText
                android:id="@+id/add_first_reading_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="number"/>
            <RadioGroup
                android:id="@+id/add_first_reading_height_unit_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_weight="0.5">
                <RadioButton
                    android:id="@+id/add_first_reading_height_unit_cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/add_user_first_reading_height_unit_cms" />
                <RadioButton
                    android:id="@+id/add_first_reading_height_unit_inch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/add_user_first_reading_height_unit_inches" />
            </RadioGroup>
        </TableRow>
        <View style="@style/Divider"/>
        <TableRow>
            <Button
                android:id="@+id/add_first_reading_save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_shape_button"
                android:layout_margin="2dp"
                android:text="Save"/>
        </TableRow>
    </TableLayout>
</LinearLayout>