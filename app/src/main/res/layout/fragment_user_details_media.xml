<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PregnantUserMediaFragment"
    android:orientation="vertical">

    <Button
        android:id="@+id/media_select_bkgd_music_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/round_shape_button"
        android:text="@string/user_media_bkgnd_music_label"/>
    <TextView
        android:id="@+id/media_bkgd_music_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Audio not set"/>

    <Button
        android:id="@+id/media_slideshow_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/round_shape_button"
        android:text="@string/user_media_slideshow_label"/>

    <Button
        android:id="@+id/media_share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:visibility="gone"
        android:background="@drawable/round_shape_button"
        android:text="@string/app_share_label"/>

    <Button
        android:id="@+id/media_collage_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/round_shape_button"
        android:text="@string/user_media_collage_label"/>

</LinearLayout>
