<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mk.familyweighttracker.Fragments.UserDetailsMediaFragment"
    android:orientation="vertical">

    <Button
        android:id="@+id/media_select_bkgd_music_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/user_media_bkgnd_music_label"/>

    <Button
        android:id="@+id/media_slideshow_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/user_media_slideshow_label"/>

    <Button
        android:id="@+id/media_share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/user_media_share_label"/>

    <Button
        android:id="@+id/media_export_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/user_media_export_label"/>

</LinearLayout>
