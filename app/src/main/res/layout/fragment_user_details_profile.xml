<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragments.UserDetailsProfileFragment">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="8"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/show_user_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/contact_default"
                android:scaleType="centerCrop"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center">
            </ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:text="Nick Name : " />
            <TextView
                android:id="@+id/show_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="start"
                android:text="(name)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="end"
                android:text="Gender : "/>
            <TextView
                android:id="@+id/show_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="start"
                android:text="(gender)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="end"
                android:text="Date of Birth : "/>
            <TextView
                android:id="@+id/show_user_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="start"
                android:text="(dob)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="end"
                android:text="Age : "/>
            <TextView
                android:id="@+id/show_user_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="start"
                android:text="(age)"/>

            <Button
                android:id="@+id/show_user_first_reading_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:visibility="gone"
                android:text="Add Pre-Pregnancy Data"/>
            <GridLayout
                android:id="@+id/show_user_pregnancy_section"
                android:rowCount="5"
                android:columnCount="2"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/show_user_pregnancy_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:text="(pre-pregnancy details)"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="end"
                    android:text="Weight : "/>
                <TextView
                    android:id="@+id/show_user_pre_pregnancy_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="start"
                    android:text="(pre-preg wt)"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="end"
                    android:text="Height : "/>
                <TextView
                    android:id="@+id/show_user_pre_pregnancy_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="start"
                    android:text="(pre-preg ht)"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="end"
                    android:text="Body-Mass-Index : "/>
                <TextView
                    android:id="@+id/show_user_pre_pregnancy_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="start"
                    android:text="(pre-preg bmi)"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="end"
                    android:text="Weight Category : "/>
                <TextView
                    android:id="@+id/show_user_pre_pregnancy_weight_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="start"
                    android:text="(wt category)"/>
            </GridLayout>
        </GridLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/remove_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:backgroundTint="@color/colorPrimaryDark"
            android:src="@android:drawable/ic_menu_delete"/>
    </LinearLayout>
</ScrollView>