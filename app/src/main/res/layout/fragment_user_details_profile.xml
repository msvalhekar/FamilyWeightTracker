<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:rowCount="10"
        android:columnCount="2"
        android:orientation="vertical">

        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/view_user_image_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_gravity="left|center"
                android:src="@drawable/contact_default"
                android:background="@android:color/transparent"
                android:clickable="false" >
            </ImageButton>
            <TextView
                android:id="@+id/view_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="{name}"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Date Of Birth"/>
            <TextView
                android:id="@+id/view_user_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{dd/mm/yyyy}" />
        </TableRow>
        <View
            android:id="@+id/view_user_reminder_divider"
            style="@style/Divider"/>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_reminder_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Reminder"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_reminder_check_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Configured?"/>
            <TextView
                android:id="@+id/view_user_remind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="No" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_reminder_day_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Day of Week"/>
            <TextView
                android:id="@+id/view_user_reminder_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{dayOfWeek}" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_reminder_time_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Time of Day"/>
            <TextView
                android:id="@+id/view_user_reminder_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{hh:mm}" />
        </TableRow>
        <View
            android:id="@+id/view_user_pre_pregnancy_divider"
            style="@style/Divider"/>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_pre_pregnancy_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pre Pregnancy Summary"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_pre_pregnancy_weight_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Weight"/>
            <TextView
                android:id="@+id/view_user_prepreg_weight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{nn kg}" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_pre_pregnancy_height_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Height"/>
            <TextView
                android:id="@+id/view_user_prepreg_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{nn cm}" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_pre_pregnancy_bmi_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Body-Mass-Index"/>
            <TextView
                android:id="@+id/view_user_prepreg_bmi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{bmi}" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/view_user_pre_pregnancy_wt_category_section"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="left|center"
                android:text="Weight Category"/>
            <TextView
                android:id="@+id/view_user_prepreg_wt_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="{wt category}" />
        </TableRow>
        <View style="@style/Divider"/>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/view_user_delete_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/round_shape_red_button"
                android:text="Remove"/>
            <Button
                android:id="@+id/view_user_edit_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/round_shape_button"
                android:text="Edit"/>
        </TableRow>
    </TableLayout>
</ScrollView>