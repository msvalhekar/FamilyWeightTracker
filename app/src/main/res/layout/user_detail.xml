<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <com.mk.familyweighttracker.Framework.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/colorPrimary"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/user_detail_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_social_layout_background"
        android:orientation="horizontal"
        android:padding="2dp"
        android:gravity="center">
        <Button
            android:id="@+id/app_share"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="3dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_share"
            android:background="@drawable/round_shape_small_button"
            android:textColor="@color/app_social_button_text"
            android:text="@string/app_share_label"/>
        <!--android:drawableLeft="@drawable/share"-->

        <Button
            android:id="@+id/app_rate"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="3dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_thumb_up"
            android:background="@drawable/round_shape_small_button"
            android:textColor="@color/app_social_button_text"
            android:text="@string/app_rate_label"/>

        <Button
            android:id="@+id/app_feedback"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_feedback"
            android:background="@drawable/round_shape_small_button"
            android:textColor="@color/app_social_button_text"
            android:text="@string/app_feedback_label"/>
    </LinearLayout>
</LinearLayout>
