<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_user_reading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_add_reading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/add_user_reading_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="2"
            android:orientation="horizontal">

            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/add_reading_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_shape_button"
                    android:text="@android:string/cancel"/>
                <Button
                    android:id="@+id/add_reading_save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_shape_button"
                    android:text="@android:string/ok"/>
            </TableRow>
            <View style="@style/Divider"/>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_date_label"/>
                <Button
                    android:id="@+id/add_reading_taken_on_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_date_default_value" />
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_period_label"/>
                <Button
                    android:id="@+id/add_reading_sequence_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_period_default_value" />
            </TableRow>
            <TableRow
                android:id="@+id/add_user_pending_readings_section"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_pending_weeks_label"/>
                <Button
                    android:id="@+id/add_reading_week_pending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:text="@string/add_user_reading_pending_weeks_default_value"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_weight_label"/>
                <Button
                    android:id="@+id/add_reading_weight_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_weight_default_value" />
                <TextView
                    android:id="@+id/add_reading_weight_unit_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_weight_unit_label"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_height_label"/>
                <Button
                    android:id="@+id/add_reading_height_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_height_default_value" />
                <TextView
                    android:id="@+id/add_reading_height_unit_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_height_unit_label"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/add_user_reading_delete_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View style="@style/Divider"/>
        <Button
            android:id="@+id/add_reading_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_red_button"
            android:layout_margin="2dp"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>