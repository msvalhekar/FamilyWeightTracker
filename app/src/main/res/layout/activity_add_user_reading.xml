<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_user_reading_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_add_reading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_reading_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/cancel"/>

        <Button
            android:id="@+id/add_reading_save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok"/>
    </LinearLayout>

    <View style="@style/Divider"/>

    <ScrollView
        android:id="@+id/add_user_reading_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/add_user_reading_date_label"/>
            <Button
                android:id="@+id/add_reading_taken_on_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/add_user_reading_date_default_value" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/add_user_reading_period_label"/>
            <Button
                android:id="@+id/add_reading_sequence_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:text="@string/add_user_reading_period_default_value" />
            <TextView
                android:id="@+id/add_reading_week_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:textStyle="bold"
                android:text="@string/add_user_reading_pending_weeks_default_value"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/add_user_reading_weight_label"/>
            <Button
                android:id="@+id/add_reading_weight_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:text="@string/add_user_reading_weight_default_value" />
            <TextView
                android:id="@+id/add_reading_weight_unit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:textStyle="bold"
                android:text="@string/add_user_reading_weight_unit_label"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="3"
                android:layout_column="0"
                android:textStyle="bold"
                android:text="@string/add_user_reading_height_label"/>
            <Button
                android:id="@+id/add_reading_height_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="3"
                android:layout_column="1"
                android:text="@string/add_user_reading_height_default_value" />
            <TextView
                android:id="@+id/add_reading_height_unit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_row="3"
                android:layout_column="2"
                android:textStyle="bold"
                android:text="@string/add_user_reading_height_unit_label"/>
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/add_reading_delete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"/>
    </LinearLayout>
</LinearLayout>