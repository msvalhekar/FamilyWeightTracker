<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_user_reading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_add_reading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/add_user_reading_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:rowCount="10"
            android:columnCount="2"
            android:orientation="horizontal">

            <TableRow
                android:layout_weight="1"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_bump_label"/>
                <ImageButton
                    android:id="@+id/add_user_reading_image_button"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/contact_default"
                    android:background="@android:color/transparent">
                </ImageButton>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_taken_on_section"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/add_reading_taken_on_lable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_date_label"/>
                <Button
                    android:id="@+id/add_reading_taken_on_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_date_default_value" />
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_sequence_section"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_period_label"/>
                <Button
                    android:id="@+id/add_reading_sequence_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_period_default_value" />
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_weight_unit_section"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/add_reading_weight_unit_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textStyle="bold"
                        android:text="@string/add_user_reading_weight_unit_label"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textSize="10dp"
                        android:text="@string/add_user_reading_unit_desc_label"/>
                </LinearLayout>
                <RadioGroup
                    android:id="@+id/add_reading_weight_unit_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/add_reading_weight_unit_kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/add_user_reading_weight_unit_kg" />
                    <RadioButton
                        android:id="@+id/add_reading_weight_unit_lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/add_user_reading_weight_unit_lbs" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_weight_section"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/add_reading_weight_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_weight_label"/>
                <Button
                    android:id="@+id/add_reading_weight_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_weight_default_value" />
                <TextView
                    android:id="@+id/add_reading_weight_unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_weight_unit_value"/>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_height_unit_section"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/add_reading_height_unit_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textStyle="bold"
                        android:text="@string/add_user_reading_height_unit_label"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textSize="10dp"
                        android:text="@string/add_user_reading_unit_desc_label"/>
                </LinearLayout>
                <RadioGroup
                    android:id="@+id/add_reading_height_unit_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/add_reading_height_unit_cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/add_user_reading_height_unit_cms" />
                    <RadioButton
                        android:id="@+id/add_reading_height_unit_inch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/add_user_reading_height_unit_inches" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_height_section"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/add_reading_height_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_height_label"/>
                <Button
                    android:id="@+id/add_reading_height_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:text="@string/add_user_reading_height_default_value" />
                <TextView
                    android:id="@+id/add_reading_height_unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_height_unit_value"/>
            </TableRow>
            <!--<View-->
                <!--android:id="@+id/add_user_reading_note_divider"-->
                <!--style="@style/Divider"/>-->
            <TableRow
                android:id="@+id/add_reading_note_section"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/add_reading_note_edittext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:lines="2"
                        android:inputType="textMultiLine"
                        android:maxLength="200">
                    </EditText>
                    <TextView
                        android:id="@+id/add_reading_note_length"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="max 200">
                    </TextView>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:id="@+id/add_user_pending_readings_section"
                android:layout_weight="1"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/add_user_reading_pending_weeks_label"/>
                <Button
                    android:id="@+id/add_reading_week_pending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:text="@string/add_user_reading_pending_weeks_default_value"/>
            </TableRow>
            <View style="@style/Divider"/>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:id="@+id/add_reading_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_shape_red_button"
                    android:text="Remove"/>
                <Button
                    android:id="@+id/add_reading_save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_shape_button"
                    android:text="Save"/>
            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>