<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_user_reading_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_add_reading"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/add_user_reading_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:rowCount="10"
            android:columnCount="2"
            android:orientation="horizontal">

            <TableRow
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/add_reading_image_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="@string/image_bump_label"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textSize="10dp"
                        android:text="@string/bump_desc_label"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/add_user_reading_image_button"
                    android:layout_width="53dp"
                    android:layout_height="70dp"
                    android:scaleType="fitCenter"
                    android:gravity="start"
                    android:background="@drawable/background_button">
                </ImageButton>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_taken_on_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/add_reading_taken_on_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textStyle="bold"
                    android:text="@string/reading_measured_date_label"/>
                <Button
                    android:id="@+id/add_reading_taken_on_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.9"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/background_button" />
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_sequence_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/add_reading_period_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textStyle="bold"
                    android:text="@string/reading_period_week_label"/>
                <Button
                    android:id="@+id/add_reading_sequence_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.9"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/background_button"/>
            </TableRow>
            <View
                android:id="@+id/add_reading_weight_section_divider"
                style="@style/Divider"/>
            <TableRow
                android:id="@+id/add_reading_weight_unit_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/add_reading_weight_unit_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textStyle="bold"
                        android:text="@string/reading_weight_unit_label"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textSize="10dp"
                        android:text="@string/reading_unit_desc_label"/>
                </LinearLayout>
                <RadioGroup
                    android:id="@+id/add_reading_weight_unit_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/add_reading_weight_unit_kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/weight_unit_kg" />
                    <RadioButton
                        android:id="@+id/add_reading_weight_unit_lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/weight_unit_lbs" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_weight_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/add_reading_weight_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textStyle="bold"
                    android:text="@string/weight_label"/>
                <Button
                    android:id="@+id/add_reading_weight_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/background_button"/>
                <TextView
                    android:id="@+id/add_reading_weight_unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"/>
            </TableRow>
            <View
                android:id="@+id/add_reading_height_section_divider"
                style="@style/Divider"/>
            <TableRow
                android:id="@+id/add_reading_height_unit_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/add_reading_height_unit_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textStyle="bold"
                        android:text="@string/reading_height_unit_label"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textSize="10dp"
                        android:text="@string/reading_unit_desc_label"/>
                </LinearLayout>
                <RadioGroup
                    android:id="@+id/add_reading_height_unit_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/add_reading_height_unit_cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/height_unit_cms" />
                    <RadioButton
                        android:id="@+id/add_reading_height_unit_inch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/height_unit_inches" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_height_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/add_reading_height_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textStyle="bold"
                    android:text="@string/height_label"/>
                <Button
                    android:id="@+id/add_reading_height_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/background_button"/>
                <TextView
                    android:id="@+id/add_reading_height_unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"/>
            </TableRow>
            <View
                android:id="@+id/add_reading_head_circum_section_divider"
                style="@style/Divider"/>
            <TableRow
                android:id="@+id/add_reading_head_circum_unit_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/add_reading_head_circum_unit_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textStyle="bold"
                        android:text="@string/reading_head_circum_unit_label"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="left|center"
                        android:textSize="10dp"
                        android:text="@string/reading_unit_desc_label"/>
                </LinearLayout>
                <RadioGroup
                    android:id="@+id/add_reading_head_circum_unit_switch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/add_reading_head_circum_unit_cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/height_unit_cms" />
                    <RadioButton
                        android:id="@+id/add_reading_head_circum_unit_inch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/height_unit_inches" />
                </RadioGroup>
            </TableRow>
            <TableRow
                android:id="@+id/add_reading_head_circum_section"
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <TextView
                    android:id="@+id/add_reading_head_circum_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textStyle="bold"
                    android:text="@string/head_circum_label"/>
                <Button
                    android:id="@+id/add_reading_head_circum_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.75"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:background="@drawable/background_button"/>
                <TextView
                    android:id="@+id/add_reading_head_circum_unit_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:paddingLeft="5dp"
                    android:textStyle="bold"/>
            </TableRow>
            <View
                android:id="@+id/add_reading_note_section_divider"
                style="@style/Divider"/>
            <TableRow
                android:id="@+id/add_reading_note_section"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/add_reading_note_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textSize="10dp">
                    </TextView>
                    <EditText
                        android:id="@+id/add_reading_note_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:lines="3"
                        android:inputType="textMultiLine">
                    </EditText>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:id="@+id/add_user_pending_readings_section"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/reading_pending_weeks_label"/>
                <Button
                    android:id="@+id/add_reading_week_pending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"/>
            </TableRow>
            <View style="@style/Divider"/>
            <TableRow
                android:layout_weight="1"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/add_reading_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_shape_red_button"
                    android:text="Remove"/>
                <Button
                    android:id="@+id/add_reading_save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/round_shape_button"
                    android:text="Save"/>
            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>