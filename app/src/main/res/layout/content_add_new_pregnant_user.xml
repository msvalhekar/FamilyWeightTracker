<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:rowCount="10"
        android:columnCount="2"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/add_user_ok_cancel_actions_section"
            android:layout_weight="1">
            <Button
                android:id="@+id/add_user_cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/round_shape_button"
                android:text="@android:string/cancel"/>
            <Button
                android:id="@+id/add_user_save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/round_shape_button"
                android:text="@android:string/ok"/>
        </TableRow>
        <View style="@style/Divider"/>
        <TableRow
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/add_user_image_button"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="2"
                android:scaleType="centerInside"
                android:gravity="center"
                android:src="@drawable/contact_default">
            </ImageButton>
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Name"/>
            <EditText
                android:id="@+id/add_user_name_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="8"
                android:text="(nick name)" />
        </TableRow>
        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Date Of Birth"/>
            <Button
                android:id="@+id/add_user_dob_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="dd/mm/yyyy" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Gender"/>
            <RadioGroup
                android:id="@+id/add_user_gender_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_weight="1">
                <RadioButton
                    android:id="@+id/add_user_gender_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male" />
                <RadioButton
                    android:id="@+id/add_user_gender_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Female" />
            </RadioGroup>

        </TableRow>
        <View style="@style/Divider"/>
        <TableRow
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Remind Weekly?"/>
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/add_user_remind_checkbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_gravity="left|center"/>
            <Button
                android:id="@+id/add_user_remind_message_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@android:color/transparent"
                android:layout_gravity="left|center"
                android:text="No"/>
        </TableRow>
        <TableRow
            android:id="@+id/add_user_reminder_day_section"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Day of Reminder"/>
            <Button
                android:id="@+id/add_user_reminder_day_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="dd/mm/yyyy" />
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/add_user_reminder_day_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:spinnerMode="dialog"
                />
        </TableRow>
        <TableRow
            android:id="@+id/add_user_reminder_time_section"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Time of Reminder"/>
            <Button
                android:id="@+id/add_user_reminder_time_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="hh:mm" />
        </TableRow>
    </TableLayout>
</ScrollView>