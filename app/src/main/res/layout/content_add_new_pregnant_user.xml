<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ProgressBar
        android:id="@+id/add_user_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_user_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/cancel"/>

        <Button
            android:id="@+id/add_user_save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok"/>
    </LinearLayout>

    <View style="@style/Divider"/>

    <ScrollView
        android:id="@+id/add_pregnant_user_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="6"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/add_user_image_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/contact_default"
                android:scaleType="centerCrop"
                android:layout_row="0"
                android:layout_column="0">
            </ImageButton>

            <EditText
                android:id="@+id/add_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:layout_gravity="center_vertical"
                android:hint="@string/add_preg_user_name_hint"
                android:inputType="textPersonName"
                android:layout_row="0"
                android:layout_column="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/add_preg_user_dob_label"/>

            <Button
                android:id="@+id/add_user_dob"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:layout_row="1"
                android:layout_column="1"
                android:textAllCaps="false"
                android:text="@string/add_preg_user_dob_default_value" />

            <CheckBox
                android:id="@+id/add_user_set_reminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:text="@string/add_preg_user_reminder_label">
            </CheckBox>

            <GridLayout
                android:id="@+id/add_user_reminder_group"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:text="@string/add_preg_user_reminder_period_label"/>

                <Button
                    android:id="@+id/add_user_reminder_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:text="@string/add_preg_user_reminder_period_default_value" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/add_user_reminder_day_spinner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:spinnerMode="dialog"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:text="@string/add_preg_user_reminder_time_label"/>

                <Button
                    android:id="@+id/add_user_reminder_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="@string/add_preg_user_reminder_time_default_value" />
            </GridLayout>
        </GridLayout>
    </ScrollView>
</LinearLayout>
